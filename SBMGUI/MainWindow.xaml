<Window x:Class="SBMGUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SBMGUI"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>






        <TabControl>
            <TabItem Header="Setup">
                <local:ServerStatusControl x:Name="_servertab"> </local:ServerStatusControl>


            </TabItem>
            <TabItem Header="Boards">
                <local:BoardsListControl x:Name="_boardstab"> </local:BoardsListControl>
            </TabItem>

            <TabItem Header="OTA Firmware update">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>


            <TabItem Header="Console">

                <local:ConsoleControl x:Name="_consoletab">  </local:ConsoleControl>


            </TabItem>


        </TabControl>

    </Grid>
</Window>
